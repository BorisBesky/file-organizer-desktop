{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8083",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "File Organizer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.yourname.fileorganizer",
      "resources": [],
      "category": "Utility"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "File Organizer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ]
  }
}